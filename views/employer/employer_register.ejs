<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TalenCrafter | Register</title>

    <!-- css file -->
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/candidate/candidate_login.css">

    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter&family=Lato&family=Montserrat&family=Poppins&family=Roboto&display=swap" rel="stylesheet">

    <!-- google icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <!-- font awesome  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- aos link  -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />

    <!-- web icon -->
    <link rel="icon" href="../icons/logo.png" type="image/x-icon">

</head>
    <!-- nav bar -->
    <nav>
        <div class="title">
            <img src="../images/logo1.png" alt="logo" class="logo">
        </div>
        <div class="login-options">
            <a href="/"><span class="material-symbols-outlined">
                home
            </span><p>Home</p></a>
        </div>
    </nav>

    <!-- login or register page  -->
    <main>
        <section id="loginbox">
            <a href="../login"><span class="material-symbols-outlined closeicon">
                close
            </span></a>
            <h2>Signin to Your account</h2>
            <div class="socialprofile">
                <a href="/auth/google/employer" class="continuewithgoogle"><div class="google">
                    <img src="../icons/search.png" alt="google logo">
                    <p class="conti">Continue with Google</p>
                </div></a>
            </div>
            <p class="or">Or login with your account</p>
            <form action="/register/employer" method="post">
                <label for="username">Company Name</label>
                <input type="text" name="companyname" placeholder="Eg: Zoho" autocomplete="off" required>
                <label for="email">Email</label>
                <input type="email" name="email" placeholder="Eg:abc@gmail.com" autocomplete="off" required>
                <label for="password">Password</label>
                <input type="password" name="password" placeholder="Enter Password" required minlength="8">
                <% if (query.error === 'incorrect_password') { %>
                    <p id="errorMessage" style="color: red;">Email already exists</p>
                    <script>
                        setTimeout(() => {
                            document.getElementById("errorMessage").style.display = "none";
                        }, 5000);
                    </script>
                <% } %>
                <button type="submit">Login</button>
            </form>
        </section>
    </main>

    <!-- footer   -->
    <footer>
        <div class="contactdetail">
            <div class="leftfooter">
                <p><i class="fa-solid fa-envelope"></i>aravind364kk30@gmail.com</p>
                <p><i class="fa-solid fa-phone"></i>+91 9342610087</p>
            </div>
            <div class="rightfooter">
                <p>Connect with social media</p>
                <div class="icons">
                    <a href=""><img src="../icons/instagram.png" alt="" loading="lazy"></a>
                    <a href=""><img src="../icons/facebook.png" alt="" loading="lazy"></a>
                    <a href=""><img src="../icons/linkedin.png" alt="" loading="lazy"></a>
                    <a href=""><img src="../icons/youtube.png" alt="" loading="lazy"></a>
                </div>
            </div>
        </div>
        <p id="copyright">Copyright &copy; 2024 | All rights reserved.</p>
    </footer>

    <!-- aos animation -->
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init({
            offset: 250,
            duration: 1000
        });
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

</body>
</html>